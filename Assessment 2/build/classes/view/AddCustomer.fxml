<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddCustomerController"
      spacing="10" prefWidth="800.0" styleClass="root">

    
    <HBox alignment="center_left" spacing="10">
    <ImageView>
        <image>
            <Image url="@movie_icon.png"/>
        </image>
    </ImageView>
    
    <Label text="Add Customer" styleClass="h1" />
    </HBox>

    
    <GridPane alignment="center" hgap="10" vgap="10">
        
        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="userIDTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/> 
                       
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="userNameTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Balance:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="userBalanceTf" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    </GridPane>
    
    <VBox alignment="center" spacing="10"> 
        <Text fx:id="feedback"/>
        <Button text="Add Customer" styleClass="button" fx:id="addCustomerBtn" disable="true" onAction="#handleAddCustomer"/>
        <Button text="Close" styleClass="button" onAction="#handleClose"/>
    </VBox>
    
    
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>
</VBox>
